<div class="comment" >
  <p><%=comment.content%></p>
<p class="comment-posted-by">Posted by <%= @message.user.email%> <%=time_ago_in_words(comment.created_at) %> ago</p>
<% if user_signed_in? %>
 <% if comment.user_id == current_user.id %>
  <div class="links btn-group">
<%= link_to 'Edit',edit_message_comment_path(comment.message,comment), class: "btn btn-default"%>
<%= link_to 'Delete',message_comment_path(comment.message,comment),method: :delete, data: {confirm: "Are you sure you want to delete this message"},class: "btn btn-default" %>
<% end %>
<% end %>
  </div>
   </div>
